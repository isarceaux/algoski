<%= render 'aside' %>


<!--Main Content Start -->
<section class="content">
    
  <%= render 'header' %>
  
  <div class="wraper container-fluid">

<!-- Key figures of the market -->

  <!-- First row with the four widget -->
    <div class="row">
      <div class="col-lg-3 col-sm-6">
          <div class="widget-panel widget-style-2 white-bg">
              <i class="ion-eye text-info"></i> 
              <h2 class="m-0 counter"><%= @classifieds_count_local %></h2>
              <h4>Annonces</h4>
              <div>Pour cette station</div>
          </div>
      </div>
      <div class="col-lg-3 col-sm-6">
          <div class="widget-panel widget-style-2 white-bg">
              <i class="ion-eye text-purple"></i> 
              <h2 class="m-0 counter"><%= @classifieds_count_global %></h2>
              <h4>Annonces</h4>
              <div>Dans notre base</div>
          </div>
      </div>
      <div class="col-lg-3 col-sm-6">
          <div class="widget-panel widget-style-2 white-bg">
              <i class="ion-home text-info"></i> 
              <h2 class="m-0 counter"><%= @housings_count_local %></h2>
              <h4>Logements</h4>
              <div>Pour cette station</div>
          </div>
      </div>
      <div class="col-lg-3 col-sm-6">
          <div class="widget-panel widget-style-2 white-bg">
              <i class="ion-home text-purple"></i> 
              <h2 class="m-0 counter"><%= @housings_count_global %></h2>
              <h4>Logements</h4>
              <div>Dans notre base</div>
          </div>
      </div>
    </div> <!-- end row -->



<!-- Average revenue per month - Morris Area Chart -->
    <div class="row">                    

      <div class="col-lg-12">
        <div class="portlet"><!-- /primary heading -->
            <div class="portlet-heading">
                <h3 class="portlet-title text-dark text-uppercase">
                    Prix moyens à la semaine (€)
                </h3>
                <div class="portlet-widgets">
                    <a href="javascript:;" data-toggle="reload"><i class="ion-refresh"></i></a>
                    <span class="divider"></span>
                    <a data-toggle="collapse" data-parent="#accordion1" href="#portlet2"><i class="ion-minus-round"></i></a>
                    <span class="divider"></span>
                    <a href="#" data-toggle="remove"><i class="ion-close-round"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div id="portlet2" class="panel-collapse collapse in">
                <div class="portlet-body">
                    <div id="morris-area-example" style="height: 320px;"></div>
                </div>
            </div>
        </div> <!-- /Portlet -->
      </div>
          
    </div> <!-- end of row -->



<!-- Type of housing and average revenue per type of housing - Roated chart C3-->

    <div class="row">
              
      <div class="col-lg-6">
        <div class="portlet"><!-- /primary heading -->
            <div class="portlet-heading">
                <h3 class="portlet-title text-dark">
                    Types de logements
                </h3>
                <div class="portlet-widgets">
                    <a href="javascript:;" data-toggle="reload"><i class="ion-refresh"></i></a>
                    <span class="divider"></span>
                    <a data-toggle="collapse" data-parent="#accordion1" href="#portlet3"><i class="ion-minus-round"></i></a>
                    <span class="divider"></span>
                    <a href="#" data-toggle="remove"><i class="ion-close-round"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div id="portlet3" class="panel-collapse collapse in">
                <div class="portlet-body">
                    <div id="morris-donut-housing" class="morris-donut-style"></div>
                    <div class="row text-center m-t-30 m-b-30">
                      <div class="col-xs-6">
                          <h4><%= @average_number_of_bedrooms %></h4>
                          <small class="text-muted">Chambres en moyenne</small>
                      </div>
                      <div class="col-xs-6">
                          <h4>1.3</h4>
                          <small class="text-muted">Salles de bain en moyenne</small>
                      </div>
                    </div>
                </div>
            </div>
        </div> <!-- /Portlet -->
      </div>


  <!-- Donut Chart -->
      <div class="col-lg-6">
          <div class="portlet"><!-- /primary heading -->
              <div class="portlet-heading">
                  <h3 class="portlet-title text-dark">
                      Commentaires
                  </h3>
                  <div class="portlet-widgets">
                      <a href="javascript:;" data-toggle="reload"><i class="ion-refresh"></i></a>
                      <span class="divider"></span>
                      <a data-toggle="collapse" data-parent="#accordion1" href="#portlet3"><i class="ion-minus-round"></i></a>
                      <span class="divider"></span>
                      <a href="#" data-toggle="remove"><i class="ion-close-round"></i></a>
                  </div>
                  <div class="clearfix"></div>
              </div>
              <div id="portlet3" class="panel-collapse collapse in">
                  <div class="portlet-body">
                      <div id="morris-donut-comments" class="morris-donut-style"></div>
                      <div class="row text-center m-t-30 m-b-30">
                        <div class="col-xs-6">
                            <h4><%= @average_rating %></h4>
                            <small class="text-muted">Note moyenne des annonces</small>
                        </div>
                        <div class="col-xs-6">
                            <h4><%= @average_number_of_comments %></h4>
                            <small class="text-muted">Nombre moyen de commentaires</small>
                        </div>
                      </div>
                  </div>
              </div>
          </div> <!-- /Portlet -->
      </div>

    </div> <!-- end row -->

  <!-- Progress bar with additional statistics -->
    <div class="row">

    <!-- First indicator -->
      <div class="col-lg-6">
          <div class="panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title">Taux de logements proposant la réservation instantannée</h3>
              </div>
              <div class="panel-body">
                  <div class="progress progress-lg">
                      <div class="progress-bar progress-bar-pink" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: <%= @rate_of_instant_booking %>%;">
                          <%= @rate_of_instant_booking %>%
                      </div>
                  </div>
              </div>
          </div>
      </div>

      <!-- Second indicator -->
      <div class="col-lg-6">
          <div class="panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title">Taux de logements avec une durée de séjour de 7 nuits au moins</h3>
              </div>
              <div class="panel-body">
                  <div class="progress progress-lg">
                      <div class="progress-bar progress-bar-purple" role="progressbar" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" style="width: <%= @rate_of_7_nights %>%;">
                          <%= @rate_of_7_nights %>%
                      </div>
                  </div>
              </div>
          </div>
      </div>

    </div>

    <div class="row">

    <!-- Third indicator -->
      <div class="col-lg-6">
          <div class="panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title">Taux de logements acceptant le paiement en ligne</h3>
              </div>
              <div class="panel-body">
                  <div class="progress progress-lg">
                      <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="36" aria-valuemin="0" aria-valuemax="100" style="width: <%= @rate_of_payable_online %>%;">
                          <%= @rate_of_payable_online %>%
                      </div>
                  </div>
              </div>
          </div>
      </div>

      <!-- Fourth indicator -->
      <div class="col-lg-6">
          <div class="panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title">Taux de logements acceptant la réservation en ligne</h3>
              </div>
              <div class="panel-body">
                  <div class="progress progress-lg">
                      <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="96" aria-valuemin="0" aria-valuemax="100" style="width: <%= @rate_of_payable_offline %>%;">
                          <%= @rate_of_payable_offline %>%
                      </div>
                  </div>
              </div>
          </div>
      </div>

    </div>








  </div>

    <%= render 'footer' %>

</section>

<%= javascript_include_tag 'dashboardanalysisjs/application.js', 'data-turbolinks-track': 'reload'%>